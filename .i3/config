#set $lgray  #888888
#set $red    #FF6615
set $lgreen #55AA55
set $dgreen #004400
set $dgray  #222222
set $lgray  #666666
set $red    #EE5555

client.focused           $lgreen $lgreen $dgreen $lgreen
client.unfocused         $dgray  $dgray  $lgray  $dgray
client.focused_inactive  $dgreen $dgreen $lgray  $dgreen
client.urgent            $red    $red    $dgray  $red

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango:DejaVu Sans Mono 8
    strip_workspace_numbers yes

    #mode hide
    #hidden_state hide
    #modifier $mod
    separator_symbol "╱"

    colors {
        focused_workspace   $lgreen $lgreen $dgreen
        active_workspace    $dgreen $dgreen $lgray
        inactive_workspace  $dgray  $dgray  $lgray
        urgent_workspace    $red    $red    $dgray
    }
    #status_command i3status -c ~/.i3/.i3status.conf
    status_command bash ~/coding/shell/statusbar/bar.sh
    position top
}

# DMenu
bindsym $mod+d exec dmenu_run -i -h 18 -nb "#000" -sf "#000" -nf "$lgreen" -sb "$lgreen" -fn "DejaVu Sans Mono-8:normal"
bindsym $mod+Shift+d exec eval `cat ~/.scripts/utils/runnables | dmenu -i -h 18 -nb "#000" -sf "#000" -nf "$lgreen" -sb "$lgreen" -fn "DejaVu Sans Mono-8:normal"`

# Dunst (notification server)
bindsym $mod+Mod1+d exec eval `echo -e 'killall -SIGUSR1 dunst # pause\nkillall -SIGUSR2 dunst # resume' | dmenu -i -l 2 -nb "#000" -sf "#000" -nf "$lgreen" -sb "$lgreen" -p "dunst:" -fn "DejaVu Sans Mono-8:normal"`

# Complex commands
bindsym $mod+c exec eval $(cat ~/scripts/.complex | dmenu -i -nb "#000" -sf "#000" -nf "$lgreen" -sb "$lgreen" -l 6 -p "command:" -h 18 -fn "DejaVu Sans Mono-8:normal")

# Dynamic workspaces
bindsym $mod+z exec i3-input -F 'workspace "%s"' -P 'Workspace: '
bindsym $mod+Shift+z exec ~/.scripts/utils/workspaces | dmenu -i -h 18 -nb "#000" -sf "#000" -nf "$lgreen" -sb "$lgreen" -p "workspaces:" -fn "DejaVu Sans Mono-8:normal" | xargs i3-msg workspace

# Monitor-setting
bindsym $mod+m exec ~/.scripts/utils/screens -i -h 18 -nb "#000" -sf "#000" -nf "$lgreen" -sb "$lgreen" -fn "DejaVuSansMono-8:normal"

# Backlight
bindsym $mod+b exec echo -e "15\n25\n50\n75\n100" | dmenu -i -h 18 -nb "#000" -sf "#000" -nf "$lgreen" -sb "$lgreen" -p "xbacklight =" -fn "DejaVu Sans Mono-8:normal" | xbacklight =$(cat)

# Screenlock
#bindsym $mod+x exec "i3lock -e -c 003300 & systemctl suspend"
bindsym $mod+x exec ~/.scripts/lock & sleep .5 && systemctl suspend
#bindsym XF86Sleep exec "i3lock -e -c 003300 & systemctl suspend"

# Meta-Keys
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 -time 25
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 -time 25

bindsym XF86AudioRaiseVolume exec amixer sset Master '5%+'
bindsym XF86AudioLowerVolume exec amixer sset Master '5%-'
bindsym XF86AudioMute exec amixer sset Master toggle

# Toggle Touchpad (and only the touchpad, i.e. Thinkpad-keys still work)
bindsym XF86Search exec synclient -l | grep TouchpadOff | awk '{ print $NF }' | xargs test 0 -eq && synclient TouchpadOff=1 || synclient TouchpadOff=0
